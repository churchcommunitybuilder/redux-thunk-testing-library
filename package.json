{
  "name": "@churchcommunitybuilder/redux-thunk-testing-library",
  "version": "1.0.0",
  "description": "Tools to test redux-thunk actions",
  "main": "dist/index.js",
  "repository": "github:churchcommunitybuilder/redux-thunk-testing-library",
  "author": "Alex Beckwith <alfonz129@gmail.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "/dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "test": "yarn jest --watch --verbose=false",
    "build": "rm -rf dist && yarn tsc -p tsconfig.json",
    "prepublishOnly": "yarn build"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "babelConfig": false
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "jest": "^24.9.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/ramda": "^0.26.21",
    "prettier": "^1.18.2",
    "redux": "^4.0.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  }
}
